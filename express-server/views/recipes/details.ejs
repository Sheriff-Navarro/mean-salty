<!DOCTYPE html>
<head>
  <link rel='stylesheet' href='../stylesheets/style.css' />

</head>

<body>
<h1>Recipe Name:<%= data.recipe.name %></h1>

<h2>Recipe CookTime:<%=  data.recipe.cookTime %></h2>

<h3> Serves How many<%=data.recipe.serves %></h3>

<a class="btn btn-info" href="/recipes/<%= data.recipe._id %>/edit" role="button">Edit the Recipe</a>

<br>
<br>
<form action="/recipes/<%=data.recipe._id%>/newreview" method="POST">
  <button type="submit">Create a New Review</button>
  <input type="number" name="rating" id="rating" placeholder="Star Rating 1-5">
  <input type="text" name="review" id="review" placeholder="Write Your Review here!">
  <% if(typeof(errorMessage) != "undefined") {
    %>
    <div class="error-message"><%=errorMessage%> </div>
  <%}%>
</form>

<% data.review.forEach((review) => { %>
  <hr>
  <div class="row">
    <div class="box" id="box">
      <h4></h4>
      <h4>Rating <%=review.rating%></h4>
      <h4>Description <%=review.review%></h4>
      <h4>Description <%=review.creatorFirst%></h4>
      <h4>Description <%=review.creatorLast%></h4>
      <img src="<%=review.creatorThumbnail%>" alt="">
    </div>
    <hr>
<% }) %>








</body>
